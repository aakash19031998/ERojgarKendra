            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/batch_name_edit_text_lnr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxStrokeColor="@color/reg_tc_bg"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/header1"
                app:hintTextColor="@android:color/black"
                android:layout_marginTop="6dp"
                android:layout_toLeftOf="@+id/proceddbuttonlayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/batch_name_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:drawablePadding="10dp"
                    android:focusable="false"

                    android:drawableLeft="@drawable/bg_reg_branch_name"
                    android:hint="Batch name" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/course_name_edit_text_lnr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxStrokeColor="@color/reg_tc_bg"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/header1"
                app:hintTextColor="@android:color/black"
                android:layout_marginTop="6dp"
                android:layout_toLeftOf="@+id/proceddbuttonlayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/course_name_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/bg_reg_course"
                    android:singleLine="true"
                    android:focusable="false"
                    android:hint="Course name" />

            </com.google.android.material.textfield.TextInputLayout>



            <RelativeLayout
                android:id="@+id/upload_cv_lnr"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70sdp"
                app:boxStrokeColor="@color/reg_tc_bg"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/header1"
                app:hintTextColor="@android:color/black"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:background="@drawable/gender_background_drawable"
                android:layout_toLeftOf="@+id/proceddbuttonlayout">

                <ImageView
                    android:id="@+id/upload_cv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bg_reg_upload"
                    android:gravity="center"

                    android:foregroundGravity="center_horizontal"
                    />

                <TextView
                    android:id="@+id/upload_cv_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_15sdp"
                    android:text="Upload CV"
                    android:singleLine="true"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/upload_cv"
                    android:textColor="@android:color/black" />






            </RelativeLayout>

            <TextView
                android:visibility="gone"
                android:id="@+id/savebutton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_34sdp"
                android:text="SAVE"
                android:layout_marginTop="20dp"
                android:textColor="@android:color/white"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:gravity="center"
                android:background="@drawable/verify_enable"
                android:padding="10dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:layout_below="@+id/resendotpbutton"></TextView>



        </LinearLayout>

    </ScrollView>

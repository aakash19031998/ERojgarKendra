        </RelativeLayout>

        <TextView
            android:id="@+id/signupbutton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_36sdp"
            android:gravity="center"
            android:text="SIGN UP / LOGIN"
            android:background="@color/app_colour_name"
            android:clickable="false"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_below="@+id/signuplayout"
            android:layout_marginTop="30dp"
            android:textColor="@android:color/white"
           ></TextView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tclayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/reg_tc_bg">

        <TextView
            android:id="@+id/mobilenumbertext1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:text="Your mobile number is totally protected">

        </TextView>

        <TextView
            android:id="@+id/bg_view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="6dp"
            android:background="@android:color/black"
            android:layout_below="@+id/mobilenumbertext1"
            android:text="By signing up you agree to 2COMS T&amp;C and Privacy Policy">

        </TextView>

        <TextView
            android:id="@+id/tcmaintext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/bg_view1"
            android:layout_marginBottom="10dp"
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:text="By signing up you agree to 2COMS T&amp;C and Privacy Policy">

        </TextView>


    </RelativeLayout>



<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tclayout"
        android:gravity="center">

        <RelativeLayout
            android:id="@+id/app_main_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/maintext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Place"
                android:textColor="@color/app_colour_name"
                android:textSize="@dimen/_30sdp"
                android:textStyle="bold">

            </TextView>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/maintext"
                android:text="me"
                android:textColor="@color/black"
                android:textSize="@dimen/_30sdp"
                android:textStyle="bold">

            </TextView>

        </RelativeLayout>

        <TextView
            android:id="@+id/signuptext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="@dimen/_18sdp"
            android:textColor="@color/black"
            android:layout_below="@+id/app_main_layout"
            android:text="Sign Up / Login">


        </TextView>


        <RelativeLayout
            android:id="@+id/signuplayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

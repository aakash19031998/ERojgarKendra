<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/bg_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_280sdp"
        android:background="@drawable/image_note1"
        android:gravity="center">

    </ImageView>

    <ImageView
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_below="@+id/bg_1"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/_40sdp"
        android:layout_marginTop="-30dp"
        android:src="@drawable/profile_bg"></ImageView>


    <ImageView
        android:id="@+id/image1"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_below="@+id/bg_1"
        android:layout_marginTop="-30dp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:src="@drawable/two_coms_logo"></ImageView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/image1"
        android:layout_marginTop="@dimen/_10sdp"
        >



        <TextView
            android:id="@+id/header1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="We have a Job for You as per your ability"
            android:layout_marginLeft="@dimen/_20sdp"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold"
            android:layout_marginRight="@dimen/_10sdp"
            android:textColor="@color/global_color_blue"></TextView>

        <TextView
            android:id="@+id/comejoinus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Come Join Us"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_below="@+id/header1"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_6sdp"
            android:textColor="@color/black"></TextView>

        <RelativeLayout
            android:id="@+id/signuplayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/comejoinus"
            android:layout_marginTop="@dimen/_10sdp">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/mobile_edit_text_inputlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxStrokeColor="@color/reg_tc_bg"
                android:layout_marginLeft="@dimen/_25sdp"
                android:layout_marginRight="@dimen/_25sdp"
                app:hintTextColor="@android:color/black"
                android:layout_toLeftOf="@+id/proceddbuttonlayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/mobile_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="10"
                    android:drawablePadding="@dimen/_10sdp"
                    android:drawableLeft="@drawable/bg_reg_mobile_app_icon"
                    android:hint="@string/mobile_no_hint" />

            </com.google.android.material.textfield.TextInputLayout>



            <TextView
                android:id="@+id/signupbutton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_32sdp"
                android:gravity="center"
                android:text="@string/cap_sign_up_login_text"
                android:background="@drawable/sign_up_enable"
                android:clickable="false"
                android:layout_below="@+id/mobile_edit_text_inputlayout"
                android:layout_marginLeft="@dimen/_25sdp"
                android:layout_marginRight="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@android:color/white"
                />

            <TextView
                android:id="@+id/tcmaintext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/_25sdp"
                android:layout_marginRight="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_below="@+id/signupbutton"
                android:textColor="@color/black"
                android:layout_marginBottom="@dimen/_2sdp"
                android:text="By signing up you agree to 2COMS T&amp;C and Privacy Policy"/>

        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>
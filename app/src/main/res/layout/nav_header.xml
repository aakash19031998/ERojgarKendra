<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="1dp"
    >

    <LinearLayout
        android:id="@+id/userProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/profile_header_main"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_130sdp"
            android:orientation="horizontal"
            android:gravity="center_vertical">


            <RelativeLayout
                android:id="@+id/relative_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/user_img"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:background="@drawable/icons_profile" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_margin="@dimen/_8sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aakash Vishwakarma"
                    android:textSize="@dimen/_14sdp"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:textColor="@android:color/black"
                   />
                <TextView
                    android:id="@+id/user_phone_no"
                    android:layout_below="@id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9930848424"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@android:color/black"
                    />

                <ImageView

                    android:layout_margin="@dimen/_5sdp"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:src="@drawable/icon_verified_acc"
                    android:layout_below="@id/user_name"
                    android:layout_toRightOf="@id/user_phone_no"/>

            </RelativeLayout>





        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/userWithoutLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/profile_header_main"

        android:visibility="visible"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_130sdp"
            android:orientation="horizontal"
            android:gravity="center_vertical">


            <RelativeLayout
                android:id="@+id/relativeImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/userImgDummy"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:background="@drawable/profile_main" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_margin="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/user_name_sample"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sign_in_sing_up"
                    android:textSize="@dimen/_12sdp"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:textColor="@android:color/black"
                    />
                <TextView
                    android:id="@+id/userInformation"
                    android:layout_below="@id/user_name_sample"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/better_exp_str"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@android:color/black"
                    />

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/arrow_main"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:text=">"
                    android:rotation="270"
                    android:textSize="@dimen/_20sdp"
                   />

            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>
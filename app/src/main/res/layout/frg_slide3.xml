<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/slide3_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_slide3"/>

    <TextView
        android:id="@+id/acc_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get placement opportunities"
        android:layout_below="@id/slide3_img"
        android:layout_centerHorizontal="true"

        android:textSize="@dimen/_22sdp"
        android:textColor="@color/black"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="locally and nationally"
        android:layout_below="@id/acc_text"
        android:layout_centerHorizontal="true"

        android:textSize="@dimen/_22sdp"
        android:textColor="@color/black"
        android:textStyle="bold"/>


</RelativeLayout>